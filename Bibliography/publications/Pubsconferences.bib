issn = {0022-5193},
journal = {Journal of Theoretical Biology},
keywords = {Canard trajectory,Population collapse,Rate-induced critical transition,Rosenzweig-MacArthur model,Singular perturbation theory},
month = {oct},
pages = {64--72},
pmid = {31302207},
