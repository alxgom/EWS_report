month = {sep},
number = {-1},
pages = {229--271},
title = {{Stabilizing the Benjamin-Feir instability}},
url = {http://www.journals.cambridge.org/abstract_S002211200500563X},
volume = {539},
year = {2005}
}
@article{Song2022,
